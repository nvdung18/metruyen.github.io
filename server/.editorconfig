[*]
end_of_line = lf
# Top-most EditorConfig file
root = true

# Default configuration for all files
[*]
indent_style = space      # Use spaces for indentation
indent_size = 2           # Set indentation to 2 spaces
charset = utf-8           # Use UTF-8 encoding
trim_trailing_whitespace = true    # Remove any trailing whitespace
insert_final_newline = true        # Ensure files end with a newline

# Specific configuration for JSON files (if needed)
[*.json]
indent_size = 2

# Specific configuration for TypeScript files (if needed)
[*.ts]
indent_size = 2
